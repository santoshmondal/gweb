<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/> 

    <package name="default" namespace="/" extends="struts-default">
		<action name="demo1" class="in.async.strutspractice.demo.StrutsDemo" method="demo1">
			<result name="success">/struts2/demo1.jsp</result>
		</action>
		
		<action name="demo2" class="in.async.strutspractice.demo.StrutsDemo" method="demo2">
			<result name="success">/struts2/demo2.jsp</result>
		</action>
		
		<action name="demo3" class="in.async.strutspractice.demo.StrutsDemo" method="demo3">
			<result name="success">/struts2/demo3.jsp</result>
		</action>
		
		<action name="demo4" class="in.async.strutspractice.demo.StrutsDemo" method="demo1">
			<result name="success">/struts2/demo4.jsp</result>
			<result name="input">/struts2/valdiation-error.jsp</result>
		</action>
		
		<action name="demo5" class="in.async.strutspractice.demo.StrutsDemo" method="demo5">
			<result name="success">/struts2/demo5.jsp</result>
			<result name="input">/struts2/valdiation-error.jsp</result>
		</action>
		
		<action name="demo6" class="in.async.strutspractice.demo.StrutsDemo" method="demo6">
			<result name="success">/struts2/valdiation-error.jsp</result>
			<result name="input">/struts2/valdiation-error.jsp</result>
		</action>
		
		<action name="stringStream1" class="in.async.strutspractice.demo.StrutsDemo" method="stringStream1">
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
     			<param name="inputName">inputStream</param>
			</result>
		</action>
		
		<action name="stringStream2" class="in.async.strutspractice.demo.StrutsDemo" method="stringStream2">
		</action>
    </package>
    
    <package name="custom" namespace="/" extends="struts-default">
    	<interceptors>
    		<interceptor name="FilterIntercept" class="in.async.strutspractice.demo.FilterIntercept"></interceptor>
    		<interceptor-stack name="custom">
    			<interceptor-ref name="FilterIntercept" />
    			<interceptor-ref name="defaultStack"/>
    		</interceptor-stack>
    	</interceptors>
    	<default-interceptor-ref name="custom"></default-interceptor-ref>
    </package>
    
    <package name="demo" namespace="/" extends="custom">
    	<action name="cAction1" class="in.async.strutspractice.demo.Custom" method="cAction1">
    	</action>
    </package>

	<package name="dupload" namespace="/" extends="json-default">
		<action name="fileUpload" class="in.async.strutspractice.fupload.FileUpload" method="fileUpload">
			<result type='json'/>
		</action>
	</package>
</struts>
